{ 
  "version": 2, 
  "builds": [
    {
      "src": "backend/api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "backend/api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "devCommand": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\""
}